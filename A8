-- ==================== Aimbot Implementation (ç¥žã‚¨ã‚¤ãƒ ï¼ï¼) ====================
 
task.spawn(function()
    while task.wait() do
        if not cfg.Aimbot then continue end
 
        local Character = LocalPlayer.Character
        if not Character or not Character:FindFirstChild("HumanoidRootPart") then continue end
        local HRP = Character.HumanoidRootPart
 
        local closestHead = nil
        local closestDist = math.huge
 
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
                local head = player.Character.Head
                local dist = (head.Position - HRP.Position).Magnitude
                if dist < cfg.ESPDistance and dist < closestDist then
                    local screenPos, onScreen = Camera:WorldToViewportPoint(head.Position)
                    if onScreen then
                        closestDist = dist
                        closestHead = head
                    end
                end
            end
        end
 
        if closestHead then
            Camera.CFrame = Camera.CFrame:Lerp(CFrame.lookAt(Camera.CFrame.Position, closestHead.Position), 0.2)
        end
    end
end)
 
print("Area Hub - ç¥žAimbotè¿½åŠ å®Œäº†ï¼ï¼å®Œç’§ã‚¨ã‚¤ãƒ ã‚¢ã‚·ã‚¹ãƒˆã§æ•µã‚’ä¸€ç¶²æ‰“å°½ã ã‚ˆï¼ï¼ðŸ”¥ðŸ˜ðŸš€")
